.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0A4A39 0%, #0d5a47 100%);
  display: flex;
  flex-direction: column;
  padding: 40px 20px;
}

.login-header {
  text-align: center;
  margin-bottom: 60px;
  margin-top: 60px;
}

.logo {
  font-size: 80px;
  margin-bottom: 20px;
  display: block;
}

.title {
  font-size: 32px;
  font-weight: bold;
  color: white;
  margin-bottom: 8px;
}

.subtitle {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.8);
}

.login-form {
  background: white;
  border-radius: 16px;
  padding: 30px 20px;
  margin-bottom: 30px;
}

.form-item {
  margin-bottom: 20px;
}

.form-input {
  width: 100%;
  height: 50px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 0 16px;
  font-size: 16px;
  background: #f9f9f9;
}

.form-input:focus {
  border-color: #0A4A39;
  background: white;
}

.code-item {
  display: flex;
  gap: 12px;
}

.code-input {
  flex: 1;
}

.code-btn {
  width: 120px;
  height: 50px;
  background: #0A4A39;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 14px;
}

.code-btn.disabled {
  background: #ccc;
  color: #666;
}

.login-btn {
  width: 100%;
  height: 50px;
  background: #0A4A39;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 16px;
}

.wx-login-btn {
  width: 100%;
  height: 50px;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.wx-icon {
  font-size: 20px;
}

.mode-switch {
  text-align: center;
  margin-top: 20px;
  color: #0A4A39;
  font-size: 14px;
}

.login-footer {
  text-align: center;
}

.agreement {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.link {
  color: white;
  text-decoration: underline;
} 