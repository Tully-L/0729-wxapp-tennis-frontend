/* profile-edit.wxss */
.container {
  padding: 20rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.wechat-sync {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: #07C160;
  border-radius: 20rpx;
  color: white;
  font-size: 24rpx;
}

.wechat-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.sync-text {
  font-size: 24rpx;
}

.form-content {
  background-color: var(--card-background);
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
}

.form-input:focus {
  border-color: var(--primary-color);
}

.form-input.disabled {
  background-color: #F5F5F5;
  color: var(--text-tertiary);
}

.form-hint {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-top: 8rpx;
  line-height: 1.4;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
}

.form-textarea:focus {
  border-color: var(--primary-color);
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-top: 8rpx;
}

/* 背景图片选择 */
.background-section {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 2rpx solid var(--border-color);
}

.background-preview {
  width: 100%;
  height: 100%;
}

.background-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.background-tip {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
}

/* 头像选择 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid var(--border-color);
  margin-bottom: 16rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 操作按钮 */
.form-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
}

.btn-cancel,
.btn-save {
  flex: 1;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-cancel {
  background-color: #F5F5F5;
  color: var(--text-secondary);
}

.btn-save {
  background-color: var(--primary-color);
  color: var(--text-on-primary);
}

.btn-save.disabled {
  background-color: #CCCCCC;
  color: #999999;
}