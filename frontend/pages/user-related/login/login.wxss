/* login.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  color: #0A4A39;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
  display: block;
}

.login-content {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
}

.btn-wx-login {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07C160 0%, #05A050 100%);
  color: #FFFFFF;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.btn-wx-login:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.4);
}

.btn-wx-login.loading {
  background: linear-gradient(135deg, #999999 0%, #777777 100%);
  box-shadow: 0 4rpx 12rpx rgba(153, 153, 153, 0.3);
}

/* 手机号授权按钮 */
.btn-phone-auth {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #1AAD19 0%, #0E8A0E 100%);
  color: #FFFFFF;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
  transition: all 0.3s ease;
}

.btn-phone-auth:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.4);
}

.btn-phone-auth.loading {
  background: linear-gradient(135deg, #999999 0%, #777777 100%);
  box-shadow: 0 4rpx 12rpx rgba(153, 153, 153, 0.3);
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
}

.loading-icon {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.divider {
  text-align: center;
  margin: 40rpx 0;
  position: relative;
}

.divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #E5E5E5;
}

.divider-text {
  background: #FFFFFF;
  padding: 0 20rpx;
  color: #999999;
  font-size: 28rpx;
  position: relative;
  z-index: 1;
}

.phone-login {
  margin-top: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-phone,
.input-code {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 44rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.code-group {
  display: flex;
  gap: 20rpx;
}

.input-code {
  flex: 1;
}

.btn-code {
  width: 200rpx;
  height: 88rpx;
  background: #0A4A39;
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 28rpx;
  border: none;
}

.btn-code.disabled {
  background: #CCCCCC;
  color: #999999;
}

.btn-login {
  width: 100%;
  height: 88rpx;
  background: #0A4A39;
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  margin-top: 40rpx;
}

.login-footer {
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
} 