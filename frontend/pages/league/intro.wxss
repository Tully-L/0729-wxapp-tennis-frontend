/* 联盟介绍页面样式 */

/* 全局样式 */
page {
  background-color: rgba(10, 74, 57, 0.05);
  font-family: -apple-system, BlinkMacSystemFont, sans-serif;
}

/* 页面容器 */
.page-container {
  width: 100%;
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.header-section {
  position: relative;
  height: 200rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #0A4A39 0%, rgba(10, 74, 57, 0.8) 100%);
}

.header-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  padding: 40rpx;
  height: 100%;
}

.league-logo {
  width: 80rpx;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 50%;
  margin-right: 20rpx;
}

.league-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.league-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.league-slogan {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 通用区块样式 */
.intro-section,
.features-section,
.stats-section,
.join-section,
.contact-section {
  background-color: #ffffff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0A4A39;
  margin-bottom: 20rpx;
}

/* 联盟简介 */
.intro-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.intro-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333333;
  text-align: justify;
}

/* 联盟特色 */
.features-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: rgba(10, 74, 57, 0.05);
  border-radius: 8rpx;
}

.feature-icon {
  width: 50rpx;
  height: 50rpx;
  background-color: #0A4A39;
  border-radius: 8rpx;
  margin-right: 20rpx;
  position: relative;
}

.feature-icon::after {
  content: '🏆';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
}

.professional-icon::after { content: '🏆'; }
.ranking-icon::after { content: '📊'; }
.training-icon::after { content: '🎯'; }
.community-icon::after { content: '👥'; }

.feature-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #0A4A39;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 联盟数据 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background-color: rgba(10, 74, 57, 0.05);
  border-radius: 8rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #0A4A39;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

/* 加入我们 */
.join-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.join-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333333;
  text-align: justify;
}

.join-benefits {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  padding: 15rpx;
  background-color: rgba(10, 74, 57, 0.05);
  border-radius: 8rpx;
}

.benefit-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.benefit-text {
  font-size: 24rpx;
  color: #0A4A39;
  font-weight: 500;
}

/* 联系我们 */
.contact-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: rgba(10, 74, 57, 0.05);
  border-radius: 8rpx;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #0A4A39;
  border-radius: 6rpx;
  margin-right: 20rpx;
  position: relative;
}

.contact-icon::after {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  color: #ffffff;
}

.phone-icon::after { content: '📞'; }
.email-icon::after { content: '📧'; }
.location-icon::after { content: '📍'; }

.contact-text {
  font-size: 28rpx;
  color: #0A4A39;
  font-weight: 500;
}
