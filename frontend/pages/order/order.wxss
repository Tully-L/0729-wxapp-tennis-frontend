/* 订单页面样式 - 适配Roland-Garros深绿色主题 */
page {
  background-color: var(--background-color, #F8F8F8);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  height: 100vh;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--background-color, #F8F8F8);
}

/* 顶部标题栏 - 使用主题色 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: var(--primary-color, #0A4A39);
  color: var(--text-on-primary, #FFFFFF);
  padding: 0 32rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(10, 74, 57, 0.15);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.2s ease;
}

.back-btn:active {
  background-color: rgba(255, 255, 255, 0.1);
}

.back-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
}

.placeholder {
  width: 60rpx;
}

/* 筛选区 - 卡片式设计 */
.filter-section {
  display: flex;
  padding: 24rpx 32rpx;
  background-color: var(--card-background, #FFFFFF);
  gap: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
  background-color: var(--card-background, #FFFFFF);
  border: 2rpx solid var(--border-color, #E5E5E5);
  border-radius: 8rpx;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.filter-btn:active {
  background-color: #f5f5f5;
  border-color: var(--primary-color, #0A4A39);
}

.filter-text {
  font-size: 28rpx;
  color: var(--text-secondary, #666666);
}

.filter-arrow {
  font-size: 20rpx;
  color: var(--text-tertiary, #999999);
}

/* 内容区 */
.content-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--background-color, #F8F8F8);
  padding: 40rpx;
  padding-bottom: 80rpx; /* 增加底部内边距 */
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-tertiary, #999999);
  margin-top: 24rpx;
}



/* 筛选弹窗 - 适配主题设计 */
.filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.filter-popup.show {
  opacity: 1;
  visibility: visible;
}

.filter-content {
  width: 100%;
  background-color: var(--card-background, #FFFFFF);
  border-radius: 24rpx 24rpx 0 0;
  padding: 48rpx 32rpx 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.filter-popup.show .filter-content {
  transform: translateY(0);
}

.filter-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary, #333333);
  text-align: center;
  margin-bottom: 32rpx;
  position: relative;
}

.filter-title::after {
  content: '';
  position: absolute;
  bottom: -16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: var(--primary-color, #0A4A39);
  border-radius: 2rpx;
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.filter-option:active {
  background-color: rgba(10, 74, 57, 0.05);
}

.filter-option.selected {
  background-color: rgba(10, 74, 57, 0.08);
  border-color: var(--primary-color, #0A4A39);
}

.filter-option text:first-child {
  font-size: 30rpx;
  color: var(--text-primary, #333333);
  transition: color 0.2s ease;
}

.filter-option.selected text:first-child {
  color: var(--primary-color, #0A4A39);
  font-weight: 500;
}

.check-icon {
  font-size: 32rpx;
  color: var(--primary-color, #0A4A39);
  font-weight: bold;
}
