/* Match Page Styles - 比赛页面样式 */

/* Tab Content Container */
.tab-content-container {
  margin-top: 100rpx; /* Account for fixed tab bar */
  min-height: calc(100vh - 100rpx);
  padding: 20rpx;
  box-sizing: border-box;
}

/* Match Tab Bar Specific Styles */
.match-tab-bar {
  background-color: var(--card-background);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* Stats Panel */
.stats-panel {
  display: flex;
  justify-content: space-around;
  background-color: var(--card-background);
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.stats-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 4rpx;
}

.stats-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Filter Bar */
.filter-bar {
  margin-bottom: 20rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-items {
  display: inline-flex;
  padding: 0 20rpx;
}

.filter-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
  background-color: var(--card-background);
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.filter-item.active {
  background-color: var(--primary-color);
  color: var(--text-on-primary);
  border-color: var(--primary-color);
}

.filter-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.filter-text {
  font-size: 24rpx;
  white-space: nowrap;
}

/* Match Cards */
.matches-list {
  padding: 0 20rpx;
}

.match-card {
  background-color: var(--card-background);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.match-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.match-card.live {
  border-color: #FF3B30;
  background: linear-gradient(135deg, #fff 0%, #fff5f5 100%);
}

/* Match Header */
.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.match-type {
  display: flex;
  align-items: center;
}

.type-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.type-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.match-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  text-transform: uppercase;
}

.status-live {
  background-color: #FF3B30;
  color: #FFFFFF;
}

.status-completed {
  background-color: var(--primary-color);
  color: var(--text-on-primary);
}

.status-upcoming {
  background-color: #007AFF;
  color: #FFFFFF;
}

.status-scheduled {
  background-color: #8E8E93;
  color: #FFFFFF;
}

/* Players Section */
.players-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.player-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.player-info.player-right {
  flex-direction: row-reverse;
  text-align: right;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  margin-right: 16rpx;
  border: 3rpx solid var(--border-color);
}

.player-info.player-right .player-avatar {
  margin-right: 0;
  margin-left: 16rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.player-details {
  flex: 1;
}

.player-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.player-rank {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 4rpx;
}

/* Score Display */
.score-display {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 60rpx;
}

.score-number {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-secondary);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background-color: var(--background-secondary);
  min-width: 60rpx;
  text-align: center;
}

.score-number.winner {
  color: var(--primary-color);
  background-color: rgba(10, 74, 57, 0.1);
}

/* VS Divider */
.vs-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
}

.vs-text {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-secondary);
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  background-color: var(--background-secondary);
}

/* Match Footer */
.match-footer {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid var(--border-color);
  flex-wrap: wrap;
}

.match-venue,
.match-type,
.spectator-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.venue-icon,
.type-icon,
.spectator-icon {
  font-size: 20rpx;
}

/* Empty State */
.empty-matches {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.6;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

.create-match-btn {
  background-color: var(--primary-color);
  color: var(--text-on-primary);
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* Load More */
.load-more-matches {
  text-align: center;
  padding: 32rpx;
  color: var(--primary-color);
  font-size: 28rpx;
  font-weight: 500;
}

/* Live Matches Tab Styles */
.live-matches-content {
  padding: 20rpx;
}

.live-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 16rpx 20rpx;
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.live-indicator {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.live-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #FF3B30;
  animation: pulse 2s infinite;
}

.live-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF3B30;
}

.refresh-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background-color: var(--background-secondary);
  font-size: 24rpx;
  color: var(--text-secondary);
}

.refresh-icon {
  font-size: 20rpx;
}

/* Live Match Cards */
.live-match-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.live-match-card {
  background: linear-gradient(135deg, #FFF 0%, #FFF8F8 100%);
  border: 2rpx solid #FF3B30;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(255, 59, 48, 0.1);
}

.live-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: #FF3B30;
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.live-pulse {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: white;
  animation: pulse 1.5s infinite;
}

/* Live Score Container */
.live-score-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.live-player {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.live-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid var(--primary-color);
}

.live-player-name {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-primary);
  text-align: center;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.live-score-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
  max-width: 200rpx;
}

.live-scores {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.live-score-number {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.live-score-separator {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.live-set-scores {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.set-separator {
  margin: 0 8rpx;
}

.live-match-time {
  font-size: 22rpx;
  color: #FF3B30;
  font-weight: 500;
}

.live-match-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 59, 48, 0.2);
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* No Live Matches */
.no-live-matches {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.no-live-icon {
  width: 160rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 32rpx;
}

.no-live-text {
  font-size: 30rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.no-live-subtitle {
  font-size: 26rpx;
  color: var(--text-tertiary);
}

/* My Matches Tab Styles */
.my-matches-content {
  padding: 20rpx;
}

.my-matches-filter {
  margin-bottom: 24rpx;
}

.filter-tabs {
  display: flex;
  background-color: var(--card-background);
  border-radius: 12rpx;
  padding: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background-color: var(--primary-color);
  color: var(--text-on-primary);
  font-weight: 500;
}

/* My Match Cards */
.my-match-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.my-match-card {
  background-color: var(--card-background);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  border-left: 6rpx solid transparent;
}

.my-match-card.player {
  border-left-color: var(--primary-color);
}

.my-match-card.spectator {
  border-left-color: #FF9500;
}

.role-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.role-badge.player {
  background-color: rgba(10, 74, 57, 0.1);
  color: var(--primary-color);
}

.role-badge.spectator {
  background-color: rgba(255, 149, 0, 0.1);
  color: #FF9500;
}

.my-match-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-right: 80rpx;
}

.my-match-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
}

.my-match-status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.my-match-status.status-upcoming {
  background-color: rgba(10, 74, 57, 0.1);
  color: var(--primary-color);
}

.my-match-status.status-live {
  background-color: rgba(255, 59, 48, 0.1);
  color: #FF3B30;
}

.my-match-status.status-completed {
  background-color: rgba(102, 102, 102, 0.1);
  color: var(--text-secondary);
}

.my-match-result {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 12rpx 16rpx;
  background-color: var(--background-secondary);
  border-radius: 12rpx;
}

.result-text {
  font-size: 26rpx;
  font-weight: 500;
}

.final-score {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.my-match-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.action-btn {
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  flex-shrink: 0;
}

.action-btn.prepare {
  background-color: var(--primary-color);
  color: var(--text-on-primary);
}

.action-btn.watch {
  background-color: #FF3B30;
  color: white;
}

.action-btn.share {
  background-color: var(--background-secondary);
  color: var(--text-secondary);
  border: 1rpx solid var(--border-color);
}

/* Empty My Matches */
.empty-my-matches {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-my-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.6;
  margin-bottom: 24rpx;
}

.empty-my-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.join-match-btn {
  background-color: var(--primary-color);
  color: var(--text-on-primary);
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* Tournament Bracket Tab Styles */
.tournament-content {
  padding: 20rpx;
}

.tournament-selector {
  margin-bottom: 24rpx;
}

.tournament-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.tournament-name {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.picker-arrow {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Bracket Container */
.bracket-container {
  background-color: var(--card-background);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.bracket-header {
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.tournament-info {
  margin-bottom: 16rpx;
}

.tournament-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.tournament-stage {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.tournament-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background-color: var(--background-secondary);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* Bracket Scroll */
.bracket-scroll {
  width: 100%;
  white-space: nowrap;
}

.bracket-rounds {
  display: inline-flex;
  gap: 32rpx;
  padding: 16rpx 0;
}

.bracket-round {
  display: inline-block;
  vertical-align: top;
  min-width: 280rpx;
}

.round-header {
  text-align: center;
  margin-bottom: 20rpx;
  padding: 12rpx 16rpx;
  background-color: var(--background-secondary);
  border-radius: 8rpx;
}

.round-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 4rpx;
}

.round-date {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.round-matches {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.bracket-match {
  background-color: var(--card-background);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 16rpx;
  white-space: normal;
  transition: all 0.3s ease;
}

.bracket-match:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.bracket-match.completed {
  border-color: var(--primary-color);
}

.bracket-match.live {
  border-color: #FF3B30;
  background: linear-gradient(135deg, #FFF 0%, #FFF8F8 100%);
}

.bracket-player {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.bracket-player.winner {
  color: var(--primary-color);
  font-weight: 600;
}

.bracket-player-name {
  font-size: 24rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bracket-score {
  font-size: 24rpx;
  font-weight: 600;
  min-width: 40rpx;
  text-align: right;
}

.bracket-vs {
  text-align: center;
  font-size: 20rpx;
  color: var(--text-secondary);
  padding: 4rpx 0;
}

/* No Tournament */
.no-tournament {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.no-tournament-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.6;
  margin-bottom: 24rpx;
}

.no-tournament-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* Statistics Tab Styles */
.statistics-content {
  padding: 20rpx;
}

.stats-overview {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.stats-card {
  background-color: var(--card-background);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease;
}

.stats-card:active {
  transform: scale(0.98);
}

.stats-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.stats-number {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Performance Chart */
.performance-chart {
  background-color: var(--card-background);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.chart-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.chart-period {
  display: flex;
  gap: 8rpx;
}

.period-btn {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
  border-radius: 16rpx;
  background-color: var(--background-secondary);
  transition: all 0.3s ease;
}

.period-btn.active {
  background-color: var(--primary-color);
  color: var(--text-on-primary);
}

.performance-bars {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 200rpx;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.performance-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  max-width: 60rpx;
}

.bar-container {
  width: 24rpx;
  height: 160rpx;
  background-color: var(--background-secondary);
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
