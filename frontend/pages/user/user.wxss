/* user.wxss */

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, sans-serif;
}

/* 页面容器 */
.page-container {
  width: 100%;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为TabBar留空间 */
}

/* 顶部背景与头像信息区 */
.top-info-section {
  position: relative;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.top-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg,
    rgba(10, 74, 57, 0.05) 0%,
    rgba(10, 74, 57, 0.17) 30%,
    rgba(10, 74, 57, 0.30) 50%,
    rgba(10, 74, 57, 0.55) 70%,
    rgba(10, 74, 57, 0.75) 100%);
}

.user-profile {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: flex-start;
  padding: 60rpx 40rpx 0;
  height: 100%;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  background-color: #0A4A39;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.user-uid {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
}

.user-info {
  font-size: 26rpx;
  color: #FFFFFF;
}

.edit-icon {
  width: 30rpx;
  height: 30rpx;
  background-color: #0A4A39;
  border-radius: 4rpx;
  position: relative;
  margin-top: 80rpx;
}

.edit-icon::after {
  content: '✎';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #FFFFFF;
  font-size: 16rpx;
}

/* 欢迎语与功能快捷入口区 */
.welcome-section {
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.welcome-bar {
  height: 60rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.welcome-text {
  font-size: 28rpx;
  color: #0A4A39;
  text-align: center;
}

.quick-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.action-icon {
  width: 50rpx;
  height: 50rpx;
  background-color: transparent;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
  position: relative;
}

/* 不同功能图标的形状示意 */
.order-icon::after {
  content: '📋';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
}

.message-icon::after {
  content: '💬';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
}

.service-icon::after {
  content: '🎧';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
}

.settings-icon::after {
  content: '⚙️';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
}

.action-text {
  font-size: 26rpx;
  color: #0A4A39;
}

/* 业务模块区 */
.business-modules {
  background-color: #ffffff;
  border: 1rpx solid #0A4A39;
  border-radius: 10rpx;
  margin: 0 30rpx 20rpx;
  padding: 20rpx;
}

.module-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.module-row:last-child {
  margin-bottom: 0;
}

.module-item {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 0 10rpx;
}

.module-item:first-child {
  margin-left: 0;
}

.module-item:last-child {
  margin-right: 0;
}

/* M豆模块 */
.mdou-module {
  background: linear-gradient(to right, rgba(10, 74, 57, 0.1), #FFFFFF);
}

/* 优惠券模块 */
.coupon-module {
  background: linear-gradient(to right, rgba(10, 74, 57, 0.05), #FFFFFF);
}

/* 我的赛事模块 */
.events-module {
  background: linear-gradient(to right, rgba(10, 74, 57, 0.05), #FFFFFF);
}

/* 会员中心模块 */
.member-module {
  background: linear-gradient(to right, rgba(10, 74, 57, 0.1), #FFFFFF);
}

.module-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #0A4A39;
  border-radius: 8rpx;
  margin-right: 15rpx;
  position: relative;
}

/* 不同模块图标 */
.mdou-icon::after {
  content: '💰';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
}

.coupon-icon::after {
  content: '🎫';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
}

.events-icon::after {
  content: '🏆';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
}

.member-icon::after {
  content: '👑';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
}

.module-content {
  display: flex;
  flex-direction: column;
}

.module-title {
  font-size: 28rpx;
  color: #0A4A39;
  margin-bottom: 4rpx;
}

.module-value {
  font-size: 26rpx;
  font-weight: bold;
  color: #0A4A39;
}

/* 我的赛事记录区 */
.events-record-section {
  background-color: #ffffff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0A4A39;
  margin-bottom: 15rpx;
}

.events-list {
  min-height: 200rpx;
}

.empty-events {
  text-align: center;
  color: rgba(10, 74, 57, 0.6);
  font-size: 28rpx;
  padding: 80rpx 0;
}

.bottom-white-space {
  height: 150rpx;
  background-color: #ffffff;
}
