/* 我的消息页面样式 - 适配Roland-Garros深绿色主题 */
page {
  background-color: var(--background-color, #F8F8F8);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  height: 100vh;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--background-color, #F8F8F8);
}

/* 顶部标题栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: var(--primary-color, #0A4A39);
  color: var(--text-on-primary, #FFFFFF);
  padding: 0 32rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(10, 74, 57, 0.15);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.2s ease;
}

.back-btn:active {
  background-color: rgba(255, 255, 255, 0.1);
}

.back-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
}

.placeholder {
  width: 60rpx;
}

/* 内容区 */
.content-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--background-color, #F8F8F8);
  padding: 40rpx;
  padding-bottom: 80rpx; /* 增加底部内边距 */
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  max-width: 400rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(10, 74, 57, 0.08);
  border-radius: 50%;
  margin-bottom: 32rpx;
}

.icon-text {
  font-size: 60rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-secondary, #666666);
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-tertiary, #999999);
  line-height: 1.4;
}


