/* 品牌赛事页面样式 */

/* 重置默认样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* 页面容器 */
.page-container {
  width: 92%;
  max-width: 750rpx;
  margin: 32rpx auto;
  padding-bottom: 100rpx;
}

/* 搜索栏 */
.search-bar {
  background-color: #ffffff;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.search-input {
  width: 100%;
  padding:2rpx;
 
  font-size: 28rpx;
  background-color: #f8f9fa;
  color: #333333;
  transition: all 0.3s ease;
  box-sizing: border-box; /* 确保padding不会增加总宽度 */
}

.search-input:focus {
  border-color: #0A4A39;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(10, 74, 57, 0.1);
}

.search-input::placeholder {
  color: #999999;
  font-size: 26rpx;
}

/* 赛事列表 */
.events-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 赛事卡片 */
.event-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  border: 1rpx solid #f0f0f0;
}

.event-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 赛事图片 */
.event-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 32rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
  border: 1rpx solid #e8e8e8;
}

/* 赛事信息 */
.event-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0; /* 防止文字溢出 */
}

/* 赛事标题 */
.event-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 赛事描述 */
.event-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  text-align: justify;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-word;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-top: 32rpx;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
}

/* 响应式调整 */
@media (max-width: 600rpx) {
  .page-container {
    width: 95%;
    margin: 24rpx auto;
  }

  .search-bar {
    padding: 20rpx;
  }

  .search-input {
    padding: 16rpx 20rpx;
    font-size: 26rpx;
  }

  .event-card {
    padding: 28rpx;
    border-radius: 16rpx;
  }

  .event-image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 24rpx;
  }

  .event-title {
    font-size: 30rpx;
  }

  .event-description {
    font-size: 26rpx;
    line-height: 1.5;
  }

  .empty-state {
    padding: 80rpx 32rpx;
  }
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 搜索栏聚焦效果 */
.search-bar:focus-within {
  box-shadow: 0 4rpx 20rpx rgba(10, 74, 57, 0.1);
}

/* 卡片悬停效果 */
.event-card:hover {
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}
