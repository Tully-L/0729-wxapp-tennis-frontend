.match-card {
  background: #fff;
  border-radius: 12px;
  margin: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.match-type {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.match-stage {
  background: #0A4A39;
  color: white;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
}

.match-content {
  margin-bottom: 12px;
}

.match-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
  font-size: 14px;
  color: #666;
}

.players-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12px;
}

.player-item {
  display: flex;
  align-items: center;
  flex: 1;
}

.player-avatar {
  font-size: 24px;
  margin-right: 8px;
}

.player-details {
  flex: 1;
}

.player-name {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 2px;
}

.player-ranking {
  font-size: 12px;
  color: #666;
}

.vs-divider {
  font-size: 12px;
  color: #999;
  margin: 0 12px;
  font-weight: bold;
}

.score-section {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.score-item {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
}

.set-number {
  color: #666;
  margin-right: 4px;
}

.set-score {
  font-weight: bold;
  color: #333;
}

.match-footer {
  display: flex;
  justify-content: flex-end;
}

.btn-primary {
  background: #0A4A39;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 14px;
} 