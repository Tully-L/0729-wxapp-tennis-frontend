/* match-status.wxss - 比赛状态管理组件样式 */

.match-status-container {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

/* 状态显示区域 */
.status-display {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-bottom: 1rpx solid #e0e0e0;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  font-weight: 600;
  position: relative;
}

.status-badge.status-registration {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
}

.status-badge.status-ongoing {
  background: linear-gradient(135deg, #00b894 0%, #00a085 100%);
  color: white;
}

.status-badge.status-paused {
  background: linear-gradient(135deg, #fdcb6e 0%, #e17055 100%);
  color: white;
}

.status-badge.status-completed {
  background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
  color: white;
}

.status-badge.status-cancelled {
  background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%);
  color: white;
}

.status-icon {
  font-size: 32rpx;
}

.status-text {
  font-size: 28rpx;
  flex: 1;
}

.live-indicator {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}

.live-dot {
  width: 8rpx;
  height: 8rpx;
  background: #ff4757;
  border-radius: 50%;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.2); }
}

.live-text {
  font-size: 20rpx;
  font-weight: bold;
}

.status-time-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
}

.time-label {
  font-size: 24rpx;
  color: #666;
}

.time-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 状态操作按钮 */
.status-actions {
  padding: 20rpx 24rpx;
}

.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 500;
  flex: 1;
  min-width: 140rpx;
  justify-content: center;
}

.start-btn, .resume-btn {
  background: linear-gradient(135deg, #00b894 0%, #00a085 100%);
  color: white;
}

.pause-btn {
  background: linear-gradient(135deg, #fdcb6e 0%, #e17055 100%);
  color: white;
}

.end-btn {
  background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
  color: white;
}

.cancel-btn {
  background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%);
  color: white;
}

.reopen-btn {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
}

.action-btn:active {
  transform: translateY(2rpx);
  opacity: 0.9;
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 26rpx;
}

/* 状态历史记录 */
.status-history {
  border-top: 1rpx solid #e0e0e0;
  background: #f8f9fa;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.history-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.history-toggle {
  font-size: 24rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background: rgba(102, 126, 234, 0.1);
}

.history-list {
  padding: 0 24rpx 20rpx;
}

.history-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.history-item:last-child {
  border-bottom: none;
}

.history-status-change {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.from-status, .to-status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  background: #e9ecef;
  color: #495057;
}

.arrow {
  font-size: 20rpx;
  color: #6c757d;
}

.history-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4rpx;
}

.history-time {
  font-size: 22rpx;
  color: #6c757d;
}

.history-user {
  font-size: 22rpx;
  color: #495057;
}

.history-reason {
  margin-top: 8rpx;
}

.reason-text {
  font-size: 22rpx;
  color: #6c757d;
  font-style: italic;
}

/* 确认对话框 */
.status-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  position: relative;
  z-index: 1001;
}

.modal-header {
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.modal-body {
  padding: 24rpx;
}

.modal-message {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.5;
  text-align: center;
  margin-bottom: 20rpx;
}

.reason-input {
  margin-top: 20rpx;
}

.input-label {
  font-size: 26rpx;
  color: #495057;
  margin-bottom: 12rpx;
  display: block;
}

.reason-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  border: 1rpx solid #ced4da;
  border-radius: 8rpx;
  font-size: 26rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

.char-count {
  font-size: 22rpx;
  color: #6c757d;
  text-align: right;
  margin-top: 8rpx;
  display: block;
}

.modal-actions {
  display: flex;
  border-top: 1rpx solid #e0e0e0;
}

.modal-btn {
  flex: 1;
  padding: 20rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 500;
  background: white;
}

.modal-btn.cancel-btn {
  color: #6c757d;
  border-right: 1rpx solid #e0e0e0;
}

.modal-btn.confirm-btn {
  color: #667eea;
  font-weight: 600;
}

.modal-btn.start-confirm, .modal-btn.resume-confirm {
  color: #00b894;
}

.modal-btn.pause-confirm {
  color: #fdcb6e;
}

.modal-btn.end-confirm {
  color: #6c5ce7;
}

.modal-btn.cancel-confirm {
  color: #fd79a8;
}

.modal-btn:active {
  background: #f8f9fa;
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #495057;
}
