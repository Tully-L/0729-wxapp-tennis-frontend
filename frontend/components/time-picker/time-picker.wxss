/* time-picker.wxss - 时间选择器组件样式 */

.time-picker-container {
  position: relative;
}

/* 遮罩层 */
.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 选择器面板 */
.picker-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--card-background);
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  overflow: hidden;
}

.picker-panel.show {
  transform: translateY(0);
}

/* 头部 */
.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid var(--border-color);
  background: var(--card-background);
  position: sticky;
  top: 0;
  z-index: 10;
}

.cancel-btn, .confirm-btn {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  transition: background-color 0.3s ease;
}

.cancel-btn {
  color: var(--text-secondary);
}

.cancel-btn:active {
  background: var(--background-color);
}

.confirm-btn {
  color: var(--primary-color);
  font-weight: 600;
}

.confirm-btn:active {
  background: var(--primary-light);
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 内容区域 */
.picker-panel > view:not(.picker-header):not(.picker-footer) {
  padding: 0 40rpx;
}

/* 章节标题 */
.section-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin: 30rpx 0 20rpx 0;
}

/* 快速选择 */
.quick-select-section {
  border-bottom: 1rpx solid var(--border-light);
  padding-bottom: 30rpx;
}

.quick-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.quick-option {
  padding: 15rpx 25rpx;
  background: var(--background-color);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.quick-option.active {
  background: var(--primary-color);
  border-color: var(--primary-color);
}

.option-text {
  font-size: 26rpx;
  color: var(--text-primary);
}

.quick-option.active .option-text {
  color: white;
}

/* 自定义日期 */
.custom-date-section {
  border-bottom: 1rpx solid var(--border-light);
  padding-bottom: 30rpx;
}

.date-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-light);
}

.date-row:last-child {
  border-bottom: none;
}

.date-label {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.date-picker {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: var(--background-color);
  border-radius: 10rpx;
  border: 1rpx solid var(--border-color);
  min-width: 200rpx;
  justify-content: space-between;
}

.date-text {
  font-size: 26rpx;
  color: var(--text-primary);
}

.picker-arrow {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 时间段选择 */
.time-range-section {
  border-bottom: 1rpx solid var(--border-light);
  padding-bottom: 30rpx;
}

.time-range-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.time-range-option {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background: var(--background-color);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.time-range-option.active {
  background: var(--primary-light);
  border-color: var(--primary-color);
}

.range-text {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.range-time {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 数字时间表达 */
.digital-time-section {
  border-bottom: 1rpx solid var(--border-light);
  padding-bottom: 30rpx;
}

.digital-inputs {
  display: flex;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex: 1;
}

.input-label {
  font-size: 26rpx;
  color: var(--text-primary);
  min-width: 60rpx;
}

.digital-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  background: var(--background-color);
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
}

.input-unit {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.digital-preview {
  padding: 20rpx;
  background: var(--primary-light);
  border-radius: 10rpx;
  text-align: center;
}

.preview-text {
  font-size: 24rpx;
  color: var(--primary-color);
}

/* 预设范围 */
.preset-section {
  padding-bottom: 30rpx;
}

.preset-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.preset-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background: var(--background-color);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.preset-item.active {
  background: var(--primary-light);
  border-color: var(--primary-color);
}

.preset-name {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.preset-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 底部操作区 */
.picker-footer {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid var(--border-color);
  background: var(--card-background);
  position: sticky;
  bottom: 0;
}

.selected-info {
  margin-bottom: 20rpx;
  text-align: center;
}

.info-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.footer-buttons {
  display: flex;
  gap: 20rpx;
}

.reset-btn, .apply-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.reset-btn {
  background: var(--background-color);
  color: var(--text-secondary);
  border: 1rpx solid var(--border-color);
}

.apply-btn {
  background: var(--primary-color);
  color: white;
}

.reset-btn:active {
  background: var(--border-light);
}

.apply-btn:active {
  background: var(--primary-dark);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .quick-options {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .time-range-options,
  .preset-grid {
    grid-template-columns: 1fr;
  }
  
  .digital-inputs {
    flex-direction: column;
    gap: 20rpx;
  }
}
