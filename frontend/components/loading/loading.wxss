.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.loading-spinner {
  width: 30px;
  height: 30px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #0A4A39;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 10px;
  color: #666;
  font-size: 14px;
}

.loading-small .loading-spinner {
  width: 20px;
  height: 20px;
  border-width: 2px;
}

.loading-small .loading-text {
  font-size: 12px;
}

.loading-large .loading-spinner {
  width: 40px;
  height: 40px;
  border-width: 4px;
}

.loading-large .loading-text {
  font-size: 16px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 